<!doctype html>
<html lang="ko">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>공부밭</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.1/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <link rel="stylesheet" type="text/css" href="https://npmcdn.com/flatpickr/dist/themes/material_green.css">
    
    <style>
        body{
            width: 1130px; 
            margin: 0 auto;
        }
        h2{
            text-align: center;
            margin: 60px 0 40px 0;
            color: #4AB186;
        }
        .formbody{
            border: solid;
            border-radius: 20px;
            border-color: #d9d9d9ff;
            border-width: 1px;
            padding: 40px;
            width: 700px;
            margin: 0 auto;
            margin-bottom: 100px;
        }
        label{
            font-size: 20px;
            font-weight: bold;
        }
        .total{
            padding-bottom: 20px;
        }
        
        h6{
            font-size: medium;
        }

    </style>
    
  </head>
  <body>
    
    <%- include('nav.ejs') %>

    
    <script src="https://code.jquery.com/jquery-3.6.1.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://npmcdn.com/flatpickr/dist/flatpickr.min.js"></script>
    <script src="https://npmcdn.com/flatpickr/dist/l10n/ko.js"></script>
 
    
    <h2>공부밭</h2>


    
    <div class="formbody">
        
        
        <form onsubmit="return validate(this)"  id="signup" action="/signup" method="POST">

            <label>아이디</label>
            <div class="row">
                <div class="col">
                    <input type="text" class="form-control" name="email" placeholder="이메일을 입력하세요">
                </div>
                <div class="col">
                    <button type="button" class="btn btn-danger sendCode" style="background-color: #F16A6E; border-color: #F16A6E;">인증번호 전송</button>
                </div>
                <div class="emailcheck" style="color: red;"> <h6>  </h6> </div>
            </div>
            
            

        
            <div class="row total">
                <div class="col">
                    <input type="text" class="form-control" name="codenum">
                </div>
                <div class="col">
                    <button type="button" class="btn btn-primary confirmCode" style="background-color: #4AB186; border-color: #4AB186;">인증 확인</button>
                </div>
                <div class="codecheck" style="color: red;"> <h6>  </h6> </div>
            </div>

            <p></p>

            <label>비밀번호</label>
            <div class="row">
                <div class="col">
                    <input type="password" class="form-control pw" placeholder="비밀번호를 입력하세요">
                </div>
            </div>
            <h6>영문, 숫자, 특수문자 조합 8자 이상</h6>
            
            <div class="row total">
                <div class="col">
                    <input type="password" class="form-control cpw" name="pw" placeholder="비밀번호를 재입력하세요">
                </div>
                <div class="checkpw" style="color: red;"> <h6> </h6> </div>
            </div>
            
            <p></p>

            <label>닉네임</label>
            <div class="row total">
                <div class="col">
                    <input type="text" class="form-control" name="nickname" placeholder="[필수]닉네임">
                </div>
                <div class="col">
                    <button type="button" class="btn btn-primary checkName" style="background-color: #4AB186; border-color: #4AB186;">중복확인</button>
                </div>
                <div class="nameDup" style="color: red;"> <h6> </h6> </div>
            </div>

            <p></p>

            <label>생년월일</label>
            <div class="row total">
                <div class="col">
                    <input class="form-control dateSelector" name="birth" placeholder=" [필수]">
                </div>
                <div class="birthcheck" style="color: red;"> <h6> </h6> </div>
            </div>

            <p></p>

            <label>지역</label>
            <div class="row total">
                <div class="col">
                    <select class="form-select" id="autoSizingSelect" name="region">
                        <option selected value="none">[필수]지역</option>
                        <option value="서울">서울</option>
                        <option value="경기">경기</option>
                        <option value="인천">인천</option>
                        <option value="강원">강원</option>
                        <option value="충청">충청</option>
                        <option value="전라">전라</option>
                        <option value="경상">경상</option>
                        <option value="부산">부산</option>
                    </select>
                </div>
                <div class="regcheck" style="color: red;"> <h6> </h6> </div>
            </div>

            <p></p>

            <label>관심 태그</label>
            <div class="row total">
                <div class="btn-group" role="group" aria-label="Basic checkbox toggle button group">
                    <input type="checkbox" class="btn-check" id="btncheck1" autocomplete="off" name="tag[0]" value="면접">
                    <label class="btn btn-outline-secondary" for="btncheck1" >#면접</label>
                
                    <input type="checkbox" class="btn-check" id="btncheck2" autocomplete="off" name="tag[1]" value="인적성">
                    <label class="btn btn-outline-secondary" for="btncheck2">#인적성</label>
                
                    <input type="checkbox" class="btn-check" id="btncheck3" autocomplete="off" name="tag[2]" value="언어">
                    <label class="btn btn-outline-secondary" for="btncheck3">#언어</label>

                    <input type="checkbox" class="btn-check" id="btncheck4" autocomplete="off" name="tag[3]" value="자소서">
                    <label class="btn btn-outline-secondary" for="btncheck4">#자소서</label>

                    <input type="checkbox" class="btn-check" id="btncheck5" autocomplete="off" name="tag[4]" value="자격증">
                    <label class="btn btn-outline-secondary" for="btncheck5">#자격증</label>
                </div>
            </div>

            <p></p>

            <div class="row total" style="margin: 50px 0 10px 0;">
                <button type="submit" class="btn btn-primary finalck" style="background-color: #4AB186; border-color:#4AB186;">회원가입</button>
            </div>

        </form>
    </div>

    <script>

        //날짜 선택기
        var dateSelector = flatpickr(document.getElementsByClassName('dateSelector'), {
            local : "ko",
            maxDate : "today"
        });

        

        //인증번호 전송
        $(".sendCode").click((e)=>{
            var emailadress = $('input[name=email]').val();
            console.log(emailadress);

            if(emailadress == null || emailadress == undefined || emailadress == ""){
                $(".emailcheck").text("올바른 주소를 입력하세요.")
            } else {
                $.ajax({
                method: 'POST',
                url: '/emailAuth',
                data: { email : emailadress },
                success: function(data) {
                    if(data=='중복'){
                        $('.emailcheck').text('이미 존재하는 아이디입니다.')
                    } else if (data=='전송'){
                        $('.emailcheck').text('인증번호가 전송되었습니다.')
                    }
                }
            })
            }
        })

        //인증번호 확인
        $(".confirmCode").click((e)=>{
            var code = $('input[name=codenum]').val();
            console.log(code);

            $.ajax({
                method: 'POST',
                url: '/cert',
                data: { code : code },
                success: function(data) {
                    if(data=='성공'){
                        $('.codecheck').text('인증되었습니다.').attr('codecheck','Y')
                    } else if (data=='실패') {
                        $('.codecheck').text('인증 실패했습니다.').attr('codecheck','N')
                    }
                }
            })
        })

        //중복닉네임 확인
        $(".checkName").click((e)=>{
            var nickname = $('input[name=nickname]').val();

            $.ajax({
                method: 'POST',
                url: '/nameCheck',
                data: { nickname : nickname },
                success: function(data) {
                    console.log(data);
                    if(data=='Y'){
                        $('.nameDup').text('사용가능한 닉네임입니다.').attr('nameck','Y');
                    }if(data=='N'){
                        $('.nameDup').text('이미 존재하는 닉네임입니다.').attr('nameck','N');
                    }
                }
            }); 
        })

            function validate() {
                var valEmail = $('input[name=email]').val();
                var valPass = $('.pw').val();
                var valCPass = $('.cpw').val();
                var valName = $('input[name=nickname]').val();
                var dateSelector = $('.dateSelector').val();
                var valReg = $("select[name=region]").val();
                var nameck = $('.nameDup').attr('nameck');
                var codeck = $('.codecheck').attr('codecheck');

                if(valEmail == null || valEmail == undefined || valEmail == ""){ $('.emailcheck').text('아이디를 입력하세요.') ; $('input[name=email]').focus(); return false;}
                if(codeck == null || codeck == undefined || codeck == "N"){ $('.codecheck').text('이메일을 인증하세요.') ; $('input[name=email]').focus(); return false;}
                
                if(valPass == null || valPass == undefined || valPass == ""){ $('.checkpw').text('비밀번호를 입력하세요.'); $('.pw').focus(); return false;} 
                if(valPass.length < 8) { $('.checkpw').text('비밀번호 8자 이상을 입력해주세요.'); $('.pw').focus(); return false;}
                if(valCPass == null || valCPass == undefined || valCPass == ""){ $('.checkpw').text('비밀번호 확인을 입력해주세요.'); $('.cpw').focus(); return false;}
                
                if(valName == null || valName == undefined || valName == ""){ $('.nameDup').text('닉네임을 입력해주세요.'); $('input[name=nickname]').focus(); return false;} 
                if(nameck == null || nameck == 'N'){$('.nameDup').text('닉네임 중복확인을 해주세요'); $('input[name=nickname]').focus(); return false;}

                if(dateSelector == null || dateSelector == undefined || dateSelector == ""){ $('.birthcheck').text('생년월일을 입력해주세요.'); $('.dateSelector').focus(); return false;} 
                if(valReg == 'none'){ $('.regcheck').text('지역을 입력해주세요.'); $('input[name=region]').focus(); return false;} 
                
                if(valPass != valCPass){ $('.checkpw').text('비밀번호와 비밀번호 확인이 같지 않습니다.'); $('.cpw').focus(); return false;}
            }
            
    </script>

    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
  </body>
</html>