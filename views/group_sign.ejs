<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>그룹 생성</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.1/font/bootstrap-icons.css"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <style>
      body {
        display: flex;
      }
      main {
        width: 1130px;
        justify-content: center;
      }
      #form {
        margin-left: 30%;
      }

      #header {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-left: 9%;
      }

      #footer {
        margin-right: 5%;
      }

      #border {
        padding: 30px;
      }

      #button,
      #category {
        margin-top: 50px;
      }

      #filename {
        margin-top: 10px;
      }

      #preview {
        width: 485px;
      }
    </style>
  </head>
  <body>
    <script src="https://code.jquery.com/jquery-3.6.1.min.js"></script>

    <div class="container">
      <%- include('nav.ejs') %>
      <main>
        <div class="py-5 text-center" id="header"></div>

        <div class="row g-5" id="form">
          <div class="col-md-7 col-lg-8 border rounded" id="border">
            <form
              class="needs-validation"
              method="post"
              action="/group_upload"
              enctype="multipart/form-data"
            >
              <div class="row g-3">
                <div class="col-12">
                  <label for="Name" class="form-label">그룹 이름</label>
                  <input
                    type="text"
                    class="form-control"
                    id="Name"
                    placeholder="그룹 이름"
                    name="Name"
                    required
                  />
                  <div class="invalid-feedback">Valid name is required.</div>
                </div>

                <div class="col-12" style="margin-top: 25px">
                  <h6>지역</h6>
                  <select
                    class="form-select"
                    aria-label="Default select example"
                    name="local"
                  >
                    <option name="서울">서울</option>
                    <option name="경기">경기</option>
                    <option name="인천">인천</option>
                    <option name="강원">강원</option>
                    <option name="충청">충청</option>
                    <option name="전라">전라</option>
                    <option name="경상">경상</option>
                    <option name="부산">부산</option>
                  </select>
                </div>

                <div class="col-12">
                  <label for="Notice" class="form-label">방장</label>
                  <div class="input-group has-validation">
                    <input
                      type="text"
                      class="form-control"
                      id="Notice"
                      placeholder="방장 이름"
                      value=""
                      name="leader"
                    />
                    <div class="invalid-feedback">
                      Your username is required.
                    </div>
                  </div>
                </div>

                <div class="col-12">
                  <label for="Notice" class="form-label">공지</label>
                  <div class="input-group has-validation">
                    <input
                      type="text"
                      class="form-control"
                      id="Notice"
                      placeholder="공지"
                      value=""
                      name="Notice"
                    />
                    <div class="invalid-feedback">
                      Your username is required.
                    </div>
                  </div>
                </div>

                <div class="form-floating">
                  <span>소개 </span>
                  <textarea
                    class="form-control"
                    placeholder="Leave a comment here"
                    id="floatingTextarea2"
                    style="height: 100px"
                    name="Description"
                  ></textarea>
                  <div class="invalid-feedback">
                    Please enter a valid email address for shipping updates.
                  </div>
                </div>

                <div class="col-12">
                  <label for="Img" class="form-label">사진</label>
                  <input
                    type="file"
                    class="form-control"
                    id="Img"
                    placeholder="사진"
                    accept="image/*"
                    name="Img"
                  />
                  <img id="preview" />
                </div>

                <script>
                  $("#Img").change((e) => {
                    console.log(e);
                    $("#filename").text(e.target.files[0].name);

                    var file = event.target.files[0];

                    if (file.length === 0) {
                      alert("파일은 선택해주세요");
                      return;
                    }

                    var reader = new FileReader();
                    reader.onload = function (e) {
                      $("#preview").attr("src", e.target.result);
                    };

                    reader.readAsDataURL(file);
                  });
                </script>

                <div
                  class="btn-group"
                  role="group"
                  aria-label="Basic radio toggle button group"
                >
                  <input
                    type="radio"
                    class="btn-check"
                    name="tag"
                    id="btnradio1"
                    autocomplete="off"
                    value="면접"
                  />
                  <label class="btn btn-outline-primary" for="btnradio1"
                    >면접</label
                  >

                  <input
                    type="radio"
                    class="btn-check"
                    name="tag"
                    id="btnradio2"
                    autocomplete="off"
                    value="인적성"
                  />
                  <label class="btn btn-outline-primary" for="btnradio2"
                    >인적성</label
                  >

                  <input
                    type="radio"
                    class="btn-check"
                    name="tag"
                    id="btnradio3"
                    autocomplete="off"
                    value="언어"
                  />
                  <label class="btn btn-outline-primary" for="btnradio3"
                    >언어</label
                  >

                  <input
                    type="radio"
                    class="btn-check"
                    name="tag"
                    id="btnradio4"
                    autocomplete="off"
                    value="자소서"
                  />
                  <label class="btn btn-outline-primary" for="btnradio4"
                    >자소서</label
                  >

                  <input
                    type="radio"
                    class="btn-check"
                    name="tag"
                    id="btnradio5"
                    autocomplete="off"
                    value="자격증"
                  />
                  <label class="btn btn-outline-primary" for="btnradio5"
                    >자격증</label
                  >
                </div>

                <div class="d-grid gap-2" id="button">
                  <button class="btn btn-primary" type="submit">버튼</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </main>

    </div>

    <script
      src="/docs/5.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
      crossorigin="anonymous"
    ></script>

    <script src="form-validation.js"></script>
  </body>
</html>
